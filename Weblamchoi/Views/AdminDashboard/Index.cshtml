@model dynamic

@{
    ViewData["Title"] = "Bảng điều khiển quản trị";
    Layout = "_AdminLayout";  

}
<link rel="stylesheet" href="~/css/Admindasboard.css" />

<div class="container">
    <div class="header" style="color: black">
        <h1>Bảng điều khiển quản trị</h1>
        <p>Quản lý sản phẩm, đơn hàng, người dùng và nhiều hơn nữa</p>
    </div>

   

    <div class="dashboard-grid">
        <div class="card">
            <div class="card-body">
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                    📦 Quản lý sản phẩm
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <a asp-controller="Categories" asp-action="Index" class="btn btn-success">
                    📁 Quản lý danh mục
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <a asp-controller="Orders" asp-action="Index" class="btn btn-warning text-dark">
                    🧾 Quản lý đơn hàng
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <a asp-controller="Users" asp-action="Index" class="btn btn-secondary">
                    👤 Quản lý người dùng
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <a asp-controller="Manufacturers" asp-action="Index" class="btn btn-info">
                    🏷️ Quản lý hãng sản xuất
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <a asp-controller="Admin" asp-action="Index" class="btn btn-danger">
                    🔐 Quản lý admin
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <a asp-controller="Orders" asp-action="RevenueReport" class="btn btn-dark">
                    📊 Quản lý doanh thu
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <a asp-controller="Reviews" asp-action="Index" class="btn btn-primary">
                    💬 Quản lý bình luận
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <a asp-controller="Vouchers" asp-action="Index" class="btn btn-outline-primary">
                    🎁 Quản lý voucher
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <a asp-controller="Contact" asp-action="Admin" class="btn btn-outline-success">
                    📧 Quản lý liên hệ
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
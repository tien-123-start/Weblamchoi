@{
    ViewData["Title"] = "Kết quả thanh toán";
    var isSuccess = ViewBag.Message?.ToString().Contains("thành công") == true;
    var orderId = ViewBag.OrderId;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .result-container {
            min-height: 70vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .result-card {
            max-width: 480px;
            width: 100%;
            text-align: center;
            border: none;
            border-radius: 16px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .result-header {
            padding: 2.5rem 1.5rem 1.5rem;
            color: white;
        }

        .result-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
        }

        .result-body {
            padding: 1.5rem;
        }

        .order-id {
            background: #f8f9fa;
            padding: 0.75rem;
            border-radius: 8px;
            font-family: monospace;
            font-weight: 600;
            color: #495057;
        }

        .btn-action {
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            border-radius: 50px;
            margin: 0.5rem;
            min-width: 140px;
        }

        .success-header {
            background: linear-gradient(135deg, #28a745, #20c997);
        }

        .fail-header {
            background: linear-gradient(135deg, #dc3545, #fd7e14);
        }
    </style>
</head>
<body>
    <div class="result-container">
        <div class="card result-card">
            <!-- HEADER: THÀNH CÔNG / THẤT BẠI -->
            <div class="result-header @(isSuccess ? "success-header" : "fail-header")">
                <div class="result-icon">
                    @if (isSuccess)
                    {
                        <i class="bi bi-check-circle-fill"></i>
                    }
                    else
                    {
                        <i class="bi bi-x-circle-fill"></i>
                    }
                </div>
                <h2 class="mb-0">@(isSuccess ? "Thanh toán thành công!" : "Thanh toán thất bại")</h2>
            </div>

            <!-- BODY -->
            <div class="result-body">
                <p class="lead mb-3">@ViewBag.Message</p>

                @if (orderId != null)
                {
                    <div class="mb-3">
                        <small class="text-muted d-block">Mã đơn hàng</small>
                        <div class="order-id">#@orderId</div>
                    </div>
                }

                @if (!isSuccess)
                {
                    <div class="alert alert-warning small mt-3">
                        <i class="bi bi-info-circle"></i>
                        Bạn vẫn có thể thử lại thanh toán hoặc liên hệ hỗ trợ.
                    </div>
                }

                <!-- NÚT HÀNH ĐỘNG -->
                <div class="d-flex flex-column flex-sm-row justify-content-center gap-2 mt-4">
                    @if (isSuccess)
                    {
                        <a asp-controller="Account" asp-action="OrderHistory" class="btn btn-success btn-action">
                            <i class="bi bi-receipt"></i> Xem đơn hàng
                        </a>
                    }
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-action">
                        <i class="bi bi-house-door"></i> Trang chủ
                    </a>
                    <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary btn-action">
                        <i class="bi bi-cart"></i> Giỏ hàng
                    </a>
                </div>

                @if (isSuccess)
                {
                    <p class="text-muted small mt-4">
                        Cảm ơn bạn đã tin tưởng <strong>Điện Máy Xanh</strong>!
                    </p>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
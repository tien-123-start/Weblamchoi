@model weblamchoi.Models.ProductCreateViewModel
@using weblamchoi.Models
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Tạo sản phẩm mới</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Product.ProductName">Tên sản phẩm</label>
        <input asp-for="Product.ProductName" class="form-control" required />
        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.CategoryID">Danh mục</label>
        <select asp-for="Product.CategoryID" asp-items="Model.Categories" class="form-control" required>
            <option value="">-- Chọn danh mục --</option>
        </select>
        <span asp-validation-for="Product.CategoryID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.ManufacturerID">Nhà sản xuất</label>
        <select asp-for="Product.ManufacturerID" asp-items="Model.Manufacturers" class="form-control">
            <option value="">-- Chọn nhà sản xuất --</option>
        </select>
        <span asp-validation-for="Product.ManufacturerID" class="text-danger"></span>
    </div>

    <hr />
    <h4>Thông tin quà tặng khuyến mãi</h4>

    <div class="form-group">
        <label asp-for="Product.BonusProductID">Chọn sản phẩm làm quà tặng</label>
        <select asp-for="Product.BonusProductID" class="form-control">
            <option value="">-- Chọn sản phẩm quà tặng --</option>
            @if (Model.BonusProducts != null && Model.BonusProducts.Any())
            {
                @foreach (var item in Model.BonusProducts)
                {
                    <option value="@item.ProductID">
                        @item.ProductName - @string.Format("{0:N0}₫", item.Price)
                    </option>
                }
            }
            else
            {
                <option value="" disabled>Không có sản phẩm khuyến mãi khả dụng</option>
            }
        </select>
        <span asp-validation-for="Product.BonusProductID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.StartDate">Bắt đầu khuyến mãi</label>
        <input asp-for="Product.StartDate" type="datetime-local" class="form-control" value="@(Model.Product.StartDate?.ToString("yyyy-MM-ddTHH:mm") ?? "")" />
        <span asp-validation-for="Product.StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.EndDate">Kết thúc khuyến mãi</label>
        <input asp-for="Product.EndDate" type="datetime-local" class="form-control" value="@(Model.Product.EndDate?.ToString("yyyy-MM-ddTHH:mm") ?? "")" />
        <span asp-validation-for="Product.EndDate" class="text-danger"></span>
    </div>

    <hr />
    <h4>Thông tin sản phẩm</h4>

    <div class="form-group">
        <label asp-for="Product.Price">Giá bán</label>
        <input asp-for="Product.Price" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Quantity">Số lượng</label>
        <input asp-for="Product.Quantity" class="form-control" type="number" required />
        <span asp-validation-for="Product.Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Description">Mô tả</label>
        <textarea asp-for="Product.Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.ImageURL">Ảnh đại diện</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ThumbnailFiles">Ảnh chi tiết sản phẩm</label>
        <input type="file" name="ThumbnailFiles" multiple class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="Product.IsAvailable" class="form-check-input" type="checkbox" checked />
        <label asp-for="Product.IsAvailable" class="form-check-label">Hiển thị sản phẩm</label>
    </div>

    <button type="submit" class="btn btn-primary">Tạo sản phẩm</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
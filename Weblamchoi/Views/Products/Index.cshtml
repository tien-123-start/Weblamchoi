@model X.PagedList.IPagedList<weblamchoi.Models.Product>
@using X.PagedList.Mvc.Core
@using weblamchoi.Models
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Thông báo -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Tiêu đề và nút thêm mới -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Danh sách sản phẩm</h2>
        <a asp-action="Create" class="btn btn-success">+ Thêm sản phẩm</a>
    </div>

    <!-- Form tìm kiếm -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-center">
                <div class="col-md-8 col-lg-6">
                    <input type="number"
                           name="productId"
                           class="form-control"
                           placeholder="Nhập ID sản phẩm..."
                           min="1" />
                </div>
                <div class="col-md-4 col-lg-3">
                    <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
                </div>
                <div class="col-md-12 col-lg-3">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Làm mới</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Bảng sản phẩm -->
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-3">Mã SP</th>
                            <th>Tên SP</th>
                            <th>Danh mục</th>
                            <th>Hãng SX</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Ảnh chính</th>
                            <th>Ảnh nhỏ</th>
                            <th>Khuyến mãi</th>
                            <th class="text-end pe-3">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">@item.ProductID</td>
                                <td>@(item.ProductName ?? "Không có tên")</td>
                                <td>@(item.Category?.CategoryName ?? "Không có")</td>
                                <td>@(item.Manufacturer?.ManufacturerName ?? "Không có")</td>
                                <td>
                                    @if (item.OriginalPrice != null && item.OriginalPrice > item.Price)
                                    {
                                        <span class="text-danger fw-bold">@item.Price.ToString("N0") ₫</span>
                                        <br />
                                        <small class="text-muted text-decoration-line-through">@item.OriginalPrice.Value.ToString("N0") ₫</small>
                                        <br />
                                        <span class="badge bg-danger">Giảm @((100 - (item.Price / item.OriginalPrice.Value * 100)).ToString("N0"))%</span>
                                    }
                                    else
                                    {
                                        <span>@item.Price.ToString("N0") ₫</span>
                                    }
                                </td>
                                <td>@item.Quantity</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageURL))
                                    {
                                        string imagePath = item.ImageURL.StartsWith("http") ? item.ImageURL : Url.Content(item.ImageURL);
                                        <img src="@imagePath" alt="@item.ProductName" width="80" class="img-thumbnail" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa có ảnh</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Thumbnails?.Any() == true)
                                    {
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var thumb in item.Thumbnails)
                                            {
                                                <img src="@thumb.ThumbnailURL" alt="Thumbnail" width="40" class="border rounded" />
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có</span>
                                    }
                                </td>
                                <td>
                                    @if (item.BonusProduct != null)
                                    {
                                        <span>@item.BonusProduct.ProductName (@item.BonusProduct.Price.ToString("N0") ₫)</span>
                                        <br />
                                        @if (!string.IsNullOrEmpty(item.BonusProduct.ImageURL))
                                        {
                                            string bonusImagePath = item.BonusProduct.ImageURL.StartsWith("http") ? item.BonusProduct.ImageURL : Url.Content(item.BonusProduct.ImageURL);
                                            <img src="@bonusImagePath" alt="@item.BonusProduct.ProductName" width="40" class="img-thumbnail mt-1" />
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Chưa có ảnh</span>
                                        }
                                        <br />
                                        <small>Từ: @(item.StartDate?.ToString("dd/MM/yyyy") ?? "Không xác định")</small>
                                        <br />
                                        <small>Đến: @(item.EndDate?.ToString("dd/MM/yyyy") ?? "Không xác định")</small>
                                        @if (item.EndDate.HasValue && item.EndDate.Value < DateTime.Now)
                                        {
                                            <br />
                                            <span class="badge bg-secondary">Hết hạn</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có</span>
                                    }
                                </td>
                                <td class="text-end pe-3">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-warning btn-sm">Sửa</a>
                                        <a asp-action="Discount" asp-route-id="@item.ProductID" class="btn btn-info btn-sm">Giảm giá</a>
                                        @if (item.BonusProduct != null)
                                        {
                                            <form asp-action="RemoveBonus" asp-route-id="@item.ProductID" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-secondary btn-sm" onclick="return confirm('Bạn có chắc muốn gỡ sản phẩm khuyến mãi này?');">Gỡ KM</button>
                                            </form>
                                        }
                                        <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@item.ProductID" data-name="@item.ProductName">Xóa</button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Phân trang -->
    <div class="d-flex justify-content-center mt-4">
        @Html.PagedListPager(
        Model,
        page => Url.Action("Index", "Products", new { area = "Admin", page }),
                new PagedListRenderOptions
                {
                    DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                    DisplayLinkToLastPage = PagedListDisplayMode.Always,
                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                    DisplayLinkToNextPage = PagedListDisplayMode.Always,
                    MaximumPageNumbersToDisplay = 5,
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link" }
                })
    </div>

    <!-- Modal xóa -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa sản phẩm: <strong id="productName"></strong>?
                </div>
                <div class="modal-footer">
                    <form id="deleteForm" method="post">
                        @Html.AntiForgeryToken()
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Nút quay lại -->
    <div class="mt-4">
        <a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-outline-secondary">Quay lại Dashboard</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
        }

        .img-thumbnail {
            border-radius: 0.5rem;
        }

        .modal-content {
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .badge {
            font-size: 0.75rem;
        }
    </style>

    <script>
        document.getElementById('deleteModal').addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const productId = button.getAttribute('data-id');
            const productName = button.getAttribute('data-name');
            document.getElementById('productName').textContent = productName;
            document.getElementById('deleteForm').action = `/Admin/Products/DeleteConfirmed/${productId}`;
        });
    </script>
}
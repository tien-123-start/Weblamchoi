@model X.PagedList.IPagedList<weblamchoi.Models.Order>
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    var currentStatus = ViewContext.HttpContext.Request.Query["status"].ToString();
    string[] statuses = new[] { "Chờ xử lý", "Đã xác nhận", "Đang chuyển hàng", "Đang giao hàng", "Đã hủy", "Thành công" };
}

<style>
    /* Button group styling */
    .btn-group {
        position: relative;
        display: flex;
        gap: 5px;
        padding-bottom: 5px;
    }

        /* Button styling with smooth transition */
        .btn-group .btn {
            transition: all 0.3s ease;
            border-radius: 5px;
            z-index: 1;
        }

            /* Active button styling */
            .btn-group .btn.active {
                color: #fff;
                background-color: #007bff;
                border-color: #007bff;
            }

        /* Sliding underline effect */
        .btn-group::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 3px;
            background-color: #007bff;
            transition: all 0.3s ease;
        }

        /* Move underline to active button */
        .btn-group .btn.active::after {
            width: 100%;
        }

    /* Content transition */
    .table, .text-center.p-5.bg-light.rounded.border {
        transition: opacity 0.3s ease, transform 0.3s ease;
        opacity: 1;
        transform: translateY(0);
    }

    /* Content animation during update */
    .content-updating {
        opacity: 0;
        transform: translateY(10px);
    }
</style>

<div class="row">
    <!-- Sidebar -->
    <div class="col-md-3">
        <div class="bg-white p-3 rounded shadow-sm">
            <h6>Bạn</h6>
            <div class="list-group">
                <a href="/Users/OrderHistory" class="list-group-item list-group-item-action active">
                    <i class="bi bi-receipt"></i> Đơn hàng đã mua
                </a>
                <a href="/Users/Profile" class="list-group-item list-group-item-action">
                    <i class="bi bi-person-vcard"></i> Thông tin và số địa chỉ
                </a>
                <a href="/Users/ChangePassword" class="list-group-item list-group-item-action">
                    <i class="bi bi-lock"></i> Đổi mật khẩu
                </a>
            </div>
            <form method="post" asp-controller="Login" asp-action="Logout" class="mt-3">
                <button type="submit" class="btn btn-outline-primary w-100">Đăng Xuất</button>
            </form>

            <div class="bg-warning p-3 mt-3 rounded">
                <p class="mb-1 fw-bold">Tổng điểm tích lũy (mỗi Điểm Giảm 1.000VND): @ViewBag.UserPoints điểm</p>
                <p class="small">Tích & sử dụng điểm cho khách hàng thân thiết.</p>
                <div class="text-center mb-2">
                    <img src="/Uploads/QR.png" alt="QR code" width="100" />
                </div>
                <div class="d-flex justify-content-around">
                    <img src="/Uploads/Appstore.jpg" style="height:30px;" alt="App Store" />
                    <img src="/Uploads/gg play.jpg" style="height:30px;" alt="Google Play" />
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <div class="col-md-9">
        <div class="bg-white p-4 rounded shadow-sm">
            <h5 class="mb-4">Lịch sử đơn hàng</h5>

            <div class="mb-4">
                <div class="btn-group" role="group">
                    @if (!string.IsNullOrEmpty(currentStatus))
                    {
                        <div class="text-muted mt-2">Đang lọc theo: <strong>@currentStatus</strong></div>
                    }

                    <a href="@Url.Action("OrderHistory", "Users")" class="btn btn-outline-primary @(string.IsNullOrEmpty(currentStatus) ? "active" : "")">Tất cả</a>
                    @foreach (var status in statuses)
                    {
                        <a href="@Url.Action("OrderHistory", "Users", new { status = status })" class="btn btn-outline-primary @(currentStatus == status ? "active" : "")">@status</a>
                    }
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center p-5 bg-light rounded border">
                    <p class="mb-3">Bạn chưa có đơn hàng nào.</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Mua sắm ngay</a>
                </div>
            }
            else
            {
                <table class="table table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Mã đơn</th>
                            <th>Ngày đặt</th>
                            <th>Trạng thái</th>
                            <th>Tổng tiền</th>
                            <th>Sản phẩm</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>#@order.OrderID</td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                                <td><span class="badge bg-info">@order.Status</span></td>
                                <td>@(order.TotalAmount?.ToString("N0") ?? "0") ₫</td>
                                <td>
                                    <ul class="mb-0 ps-3">
                                        @foreach (var item in order.OrderDetails ?? Enumerable.Empty<weblamchoi.Models.OrderDetail>())
                                        {
                                            var productName = item.Product?.ProductName ?? "Sản phẩm không xác định";
                                            bool alreadyReviewed = ((List<int>)ViewBag.ReviewedProductIds).Contains(item.ProductID);

                                            <li>
                                                @productName - SL: @item.Quantity
                                                @if (order.Status == "Thành công" && !alreadyReviewed)
                                                {
                                                    <a href="@Url.Action("Details", "Products", new { id = item.ProductID })" class="btn btn-sm btn-outline-primary ms-2">
                                                        Bình luận
                                                    </a>
                                                }
                                                else if (alreadyReviewed)
                                                {
                                                    <span class="text-success ms-2">Đã bình luận</span>
                                                }
                                            </li>
                                        }
                                    </ul>
                                </td>
                                <td>
                                    @if (order.Status == "Chờ xử lý" || order.Status == "Chờ thanh toán")
                                    {
                                        <form asp-controller="Users" asp-action="CancelOrder" method="post" onsubmit="return confirm('Bạn có chắc muốn hủy đơn hàng này?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="orderId" value="@order.OrderID" />
                                            <button type="submit" class="btn btn-sm btn-danger">Hủy đơn</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="d-flex justify-content-center mt-4">
                    @Html.PagedListPager(
                    Model,
                                page => Url.Action("OrderHistory", new { page, status = ViewContext.HttpContext.Request.Query["status"].ToString() }),
                                new PagedListRenderOptions
                                {
                                    LiElementClasses = new[] { "page-item" },
                                    PageClasses = new[] { "page-link" },
                                    UlElementClasses = new[] { "pagination" }
                                })
            </div>

            }

            <div class="mt-3">
                <a href="/Home/Index" class="text-primary text-decoration-underline">Về trang chủ</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.btn-group .btn').on('click', function (e) {
                e.preventDefault();
                $('.btn-group .btn').removeClass('active');
                $(this).addClass('active');

                $('.table, .text-center.p-5.bg-light.rounded.border').addClass('content-updating');

                var url = $(this).attr('href');

                $.ajax({
                    url: url,
                    method: 'GET',
                    success: function (data) {
                        $('.col-md-9 .bg-white.p-4.rounded.shadow-sm').html($(data).find('.col-md-9 .bg-white.p-4.rounded.shadow-sm').html());
                        $('.table, .text-center.p-5.bg-light.rounded.border').removeClass('content-updating');
                    },
                    error: function () {
                        alert('Không thể tải dữ liệu. Vui lòng thử lại.');
                        $('.table, .text-center.p-5.bg-light.rounded.border').removeClass('content-updating');
                    }
                });
            });
        });
    </script>
}
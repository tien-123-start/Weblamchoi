@model weblamchoi.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="row">
    <div class="col-md-3">
        <div class="bg-white p-3 rounded shadow-sm">
            <h6>Bạn</h6>
            <div class="list-group">
                <a href="/Users/OrderHistory" class="list-group-item list-group-item-action">
                    <i class="bi bi-receipt"></i> Đơn hàng đã mua
                </a>
                <a href="/Users/Profile" class="list-group-item list-group-item-action">
                    <i class="bi bi-person-vcard"></i> Thông tin và số địa chỉ
                </a>
                <a href="/Users/ChangePassword" class="list-group-item list-group-item-action active">
                    <i class="bi bi-lock"></i> Đổi mật khẩu
                </a>
            </div>
            <form method="post" asp-controller="Login" asp-action="Logout" class="mt-3">
                <button type="submit" class="btn btn-outline-primary w-100">Đăng Xuất</button>
            </form>

            <div class="bg-warning p-3 mt-3 rounded">
                <p class="mb-1 fw-bold">Tổng điểm tích lũy: 0 điểm</p>
                <p class="small">Tích & sử dụng điểm cho khách hàng thân thiết.</p>
                <div class="text-center mb-2">
                    <img src="/Uploads/QR.png" alt="QR code" width="100" />
                </div>
                <div class="d-flex justify-content-around">
                    <img src="/Uploads/Appstore.jpg" style="height:30px;" alt="App Store" />
                    <img src="/Uploads/gg play.jpg" style="height:30px;" alt="Google Play" />
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="bg-white p-4 rounded shadow-sm">
            <h5 class="mb-4">Đổi mật khẩu</h5>

            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success">@ViewBag.Success</div>
            }

            <form method="post" asp-action="ChangePassword">
                <input type="hidden" asp-for="UserID" />

                <div class="mb-3">
                    <label class="form-label">Mật khẩu hiện tại</label>
                    <input asp-for="CurrentPassword" type="password" class="form-control" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mật khẩu mới</label>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Xác nhận mật khẩu mới</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>
            </form>

            <div class="mt-3">
                <a href="/Users/Profile" class="text-primary text-decoration-underline">Quay lại thông tin tài khoản</a>
                <span class="mx-2">|</span>
                <a href="/Home/Index" class="text-primary text-decoration-underline">Về trang chủ</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model weblamchoi.Models.UserProfileViewModel
@{
    ViewData["Title"] = "Thông tin tài khoản";
    var modelState = ViewData.ModelState;
}

<div class="row">
    <div class="col-md-3">
        <div class="bg-white p-3 rounded shadow-sm">
            <h6>Bạn</h6>
            <div class="list-group">
                <a href="/Users/OrderHistory" class="list-group-item list-group-item-action">
                    <i class="bi bi-receipt"></i> Đơn hàng đã mua
                </a>
                <a href="/Users/Profile" class="list-group-item list-group-item-action active">
                    <i class="bi bi-person-vcard"></i> Thông tin và số địa chỉ
                </a>
                <a href="/Users/ChangePassword" class="list-group-item list-group-item-action">
                    <i class="bi bi-lock"></i> Đổi mật khẩu
                </a>
            </div>
            <form method="post" asp-controller="Login" asp-action="Logout" class="mt-3">
                <button type="submit" class="btn btn-outline-primary w-100">Đăng Xuất</button>
            </form>

            <div class="bg-warning p-3 mt-3 rounded">
                <p class="mb-1 fw-bold">Tổng điểm tích lũy (mỗi Điểm Giảm 1.000VND): @ViewBag.UserPoints điểm</p>

                <p class="small">Tích & sử dụng điểm cho khách hàng thân thiết.</p>
                <div class="text-center mb-2">
                    <img src="/Uploads/QR.png" alt="QR code" width="100" />
                </div>
                <div class="d-flex justify-content-around">
                    <img src="/Uploads/Appstore.jpg" style="height:30px;" alt="App Store" />
                    <img src="/Uploads/gg play.jpg" style="height:30px;" alt="Google Play" />
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="bg-white p-4 rounded shadow-sm">
            <h5 class="mb-4">Thông tin tài khoản</h5>

            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success">@ViewBag.Success</div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            @if (modelState.ErrorCount > 0)
            {
                <div class="alert alert-danger">
                    @foreach (var error in modelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <form method="post" asp-action="Profile" onsubmit="console.log('Form data: ' + $(this).serialize());">
                <input type="hidden" asp-for="UserID" />
                <input type="hidden" asp-for="Email" /> <!-- Gửi giá trị Email hiện tại -->

                <div class="mb-3">
                    <label class="form-label">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Số điện thoại</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Địa chỉ</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>
            </form>

            <div class="mt-3">
                <a href="/Users/ChangePassword" class="text-primary text-decoration-underline">Đổi mật khẩu</a>
                <span class="mx-2">|</span>
                <a href="/Home/Index" class="text-primary text-decoration-underline">Về trang chủ</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
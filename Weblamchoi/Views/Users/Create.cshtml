@model weblamchoi.Models.User
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<h2>Thêm người dùng</h2>

<form asp-controller="Users" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- hiện ModelState Errors nếu có -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@err.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mật khẩu</label>
        <input asp-for="PasswordHash" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Điện thoại</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label>Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label">Hoạt động?</label>
    </div>
    <button type="submit" class="btn btn-success mt-2">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Quay lại</a>
</form>

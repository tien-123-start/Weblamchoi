@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4 rounded" style="width: 100%; max-width: 400px;">
        <h4 class="text-center text-primary mb-4">Quên mật khẩu</h4>

        <form asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <label for="email">Nhập email cần đổi:</label>
                <input type="email" name="email" id="email" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Gửi liên kết đặt lại</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success mt-3">@ViewBag.Success</div>
        }

        <div class="text-center mt-3">
            <a asp-action="Index">Quay lại đăng nhập</a>
        </div>
    </div>
</div>

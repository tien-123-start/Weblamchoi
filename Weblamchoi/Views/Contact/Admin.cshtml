@model IEnumerable<weblamchoi.Models.Contact>

@{
    ViewData["Title"] = "Quản lý Liên hệ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --primary-color: #00a650; /* Điện Máy Xanh green */
        --secondary-color: #f5f5f5; /* Light gray background */
        --text-color: #333; /* Dark text */
        --border-color: #e0e0e0; /* Light border */
        --accent-color: #ff6200; /* Orange for highlights */
        --card-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        --border-radius: 8px;
    }

    body {
        background: #fff;
        font-family: 'Roboto', 'Segoe UI', sans-serif;
        color: var(--text-color);
    }

    .page-header {
        text-align: center;
        margin: 1rem 0 2rem;
    }

    .page-header h2 {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--primary-color);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .contact-container {
        max-width: 1000px;
        margin: 0 auto;
        background: #fff;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .alert {
        border-radius: 6px;
        padding: 0.8rem;
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

    .alert-success {
        background: #e6ffe6;
        color: #1a4d1a;
    }

    .alert-danger {
        background: #ffe6e6;
        color: #721c24;
    }

    .btn-primary {
        background: var(--primary-color);
        border: none;
        color: #fff;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 500;
    }

    .btn-primary:hover {
        background: #008c3f;
    }

    .btn-info {
        background: #17a2b8;
        border: none;
        color: #fff;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 500;
    }

    .btn-info:hover {
        background: #138496;
    }

    .btn-danger {
        background: #dc3545;
        border: none;
        color: #fff;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 500;
    }

    .btn-danger:hover {
        background: #b02a37;
    }

    .table {
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius);
        overflow: hidden;
    }

    .table th {
        background: var(--secondary-color);
        color: var(--text-color);
        font-weight: 600;
        padding: 0.75rem;
    }

    .table td {
        padding: 0.75rem;
        vertical-align: middle;
        border-top: 1px solid var(--border-color);
    }

    .table tbody tr:hover {
        background: rgba(0, 166, 80, 0.05);
    }

    media (max-width: 768px) {
        .page-header h2 {
            font-size: 1.5rem;
        }

        .contact-container {
            padding: 1rem;
        }

        .table {
            font-size: 0.85rem;
        }

        .btn {
            padding: 0.4rem 0.8rem;
            font-size: 0.85rem;
        }
    }
</style>

<div class="page-header">
    <h2><i class="bi bi-envelope"></i> Quản lý Liên hệ</h2>
</div>

<div class="contact-container">
    @if (TempData["ContactMessage"] != null)
    {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-info-circle"></i> @TempData["ContactMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
    }

    @if (TempData["ContactError"] != null)
    {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["ContactError"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
    }

    <p>
        <a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-left"></i> Quay lại Trang Quản Lý</a>
    </p>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Họ và Tên</th>
                <th>Email</th>
                <th>Số Điện Thoại</th>
                <th>Ngày Gửi</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => contact.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => contact.Email)</td>
                        <td>@Html.DisplayFor(modelItem => contact.PhoneNumber)</td>
                        <td>@Html.DisplayFor(modelItem => contact.SubmittedAt)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@contact.Id" class="btn btn-info btn-sm"><i class="bi bi-eye"></i> Chi tiết</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
@model weblamchoi.Models.Contact

@{
    ViewData["Title"] = "Chi tiết ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --primary-color: #00a650; /* Điện Máy Xanh green */
        --secondary-color: #f5f5f5; /* Light gray background */
        --text-color: #333; /* Dark text */
        --border-color: #e0e0e0; /* Light border */
        --accent-color: #ff6200; /* Orange for highlights */
        --card-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        --border-radius: 8px;
    }

    body {
        background: #fff;
        font-family: 'Roboto', 'Segoe UI', sans-serif;
        color: var(--text-color);
    }

    .page-header {
        text-align: center;
        margin: 1rem 0 2rem;
    }

        .page-header h2 {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

    .contact-container {
        max-width: 800px;
        margin: 0 auto;
        background: #fff;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .alert {
        border-radius: 6px;
        padding: 0.8rem;
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

    .alert-success {
        background: #e6ffe6;
        color: #1a4d1a;
    }

    .alert-danger {
        background: #ffe6e6;
        color: #721c24;
    }

    .alert-warning {
        background: #fff3cd;
        color: #856404;
    }

    .btn-primary {
        background: var(--primary-color);
        border: none;
        color: #fff;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 500;
    }

        .btn-primary:hover {
            background: #008c3f;
        }

    .btn-secondary {
        background: #6c757d;
        border: none;
        color: #fff;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 500;
    }

        .btn-secondary:hover {
            background: #5a6268;
        }

    .btn-danger {
        background: #dc3545;
        border: none;
        color: #fff;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 500;
    }

        .btn-danger:hover {
            background: #b02a37;
        }

    .card {
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
    }

    .card-header {
        background: var(--secondary-color);
        font-weight: 600;
        color: var(--text-color);
        border-bottom: 1px solid var(--border-color);
    }

    .card-body {
        padding: 1.5rem;
    }

        .card-body dt {
            font-weight: 600;
            color: var(--text-color);
        }

        .card-body dd {
            margin-bottom: 0.5rem;
        }

    media (max-width: 768px) {
        .page-header h2

    {
        font-size: 1.5rem;
    }

    .contact-container {
        padding: 1rem;
    }

    .card-body {
        padding: 1rem;
    }

    .btn {
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
    }

    }
</style>

<div class="page-header">
    <h2><i class="bi bi-envelope"></i> Chi tiết và Xóa Liên hệ</h2>
</div>

<div class="contact-container">
    @if (TempData["ContactMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle"></i> @TempData["ContactMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ContactError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ContactError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-3">
        <div class="card-header">
            <i class="bi bi-info-circle"></i> Thông tin Liên hệ
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Họ và Tên</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">Số Điện Thoại</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <dt class="col-sm-3">Nội dung</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Message)</dd>

                <dt class="col-sm-3">Ngày Gửi</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SubmittedAt)</dd>
            </dl>
        </div>
    </div>

    <h3><i class="bi bi-trash"></i> Xóa Liên hệ</h3>
    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa liên hệ này?
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <input type="submit" value="Xóa Liên hệ" class="btn btn-danger" />
            <a asp-action="Admin" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại Danh sách</a>
        </div>
    </form>
</div>


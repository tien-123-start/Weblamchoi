@model List<weblamchoi.Models.Product>
@{
    ViewData["Title"] = "Quản lý bình luận theo sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số bình luận</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Reviews?.Count()  </td>
                <td>
                    <a asp-controller="Reviews" asp-action="ByProduct" asp-route-productId="@product.ProductID" class="btn btn-primary btn-sm">
                        Xem bình luận
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-secondary mt-3">Quay trở lại Dashboard</a>


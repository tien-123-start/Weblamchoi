@model List<weblamchoi.Models.Review>
@{
    var product = (weblamchoi.Models.Product)ViewBag.Product;
    ViewData["Title"] = $"Bình luận của sản phẩm: {product.ProductName}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<a asp-controller="Reviews" asp-action="Index" class="btn btn-secondary mb-3">Quay lại danh sách sản phẩm</a>

@if (Model.Count == 0)
{
    <p>Chưa có bình luận nào cho sản phẩm này.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Người dùng</th>
                <th>Đánh giá</th>
                <th>Bình luận</th>
                <th>Ngày bình luận</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.User?.FullName </td>
                    <td>@review.Rating / 5</td>
                    <td>@review.Comment</td>
                    <td>@review.ReviewDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <form asp-controller="Reviews" asp-action="Delete" method="post" onsubmit="return confirm('Bạn chắc chắn muốn xóa bình luận này?');">
                            <input type="hidden" name="id" value="@review.ReviewID" />
                            <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

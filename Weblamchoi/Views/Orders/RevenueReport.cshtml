@model dynamic
@{
    ViewData["Title"] = "Báo cáo doanh thu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/admin.css" />

<div class="container">
    <h1>Báo cáo doanh thu</h1>
    <p>Xem doanh thu theo ngày, tháng hoặc năm</p>

    <!-- Filter Form -->
    <form asp-action="RevenueReport" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-3">
                <label for="startDate">Từ ngày</label>
                <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
            </div>
            <div class="col-md-3">
                <label for="endDate">Đến ngày</label>
                <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
            </div>
            <div class="col-md-3">
                <label for="groupBy">Nhóm theo</label>
                <select name="groupBy" class="form-control">
                    <option value="day" selected="@(ViewBag.GroupBy == "day")">Ngày</option>
                    <option value="month" selected="@(ViewBag.GroupBy == "month")">Tháng</option>
                    <option value="year" selected="@(ViewBag.GroupBy == "year")">Năm</option>
                </select>
            </div>
            <div class="col-md-3 align-self-end">
                <button type="submit" class="btn btn-primary">Lọc</button>
            </div>
        </div>
    </form>

    <!-- Revenue Table -->
    <h3>Doanh thu theo @(ViewBag.GroupBy == "year" ? "năm" : ViewBag.GroupBy == "month" ? "tháng" : "ngày")</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@(ViewBag.GroupBy == "year" ? "Năm" : ViewBag.GroupBy == "month" ? "Tháng" : "Ngày")</th>
                <th>Doanh thu (VNĐ)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.RevenueData)
            {
                <tr>
                    <td>
                        @if (ViewBag.GroupBy == "year")
                        {
                            @item.Date.Year
                        }
                        else if (ViewBag.GroupBy == "month")
                        {
                            @item.Date.ToString("MM/yyyy")
                        }
                        else
                        {
                            @item.Date.ToString("dd/MM/yyyy")
                        }
                    </td>
                    <td>@item.TotalRevenue.ToString("N0")</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Chart Section -->
    <h3>Biểu đồ doanh thu</h3>
    <canvas id="revenueChart"></canvas>
    <a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-secondary mt-3">Quay trở lại Dashboard</a>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const revenueData = @Html.Raw(Json.Serialize(ViewBag.RevenueData));
            const labels = revenueData.map(item => {
                const date = new Date(item.Date);
                return '@ViewBag.GroupBy' === 'year' ? date.getFullYear() :
                       '@ViewBag.GroupBy' === 'month' ? date.toLocaleString('vi-VN', { month: 'long', year: 'numeric' }) :
                       date.toLocaleString('vi-VN', { day: '2-digit', month: '2-digit', year: 'numeric' });
            });
            const ctx = document.getElementById('revenueChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Doanh thu (VNĐ)',
                        data: revenueData.map(item => item.TotalRevenue),
                        borderColor: '#007bff',
                        backgroundColor: 'rgba(0, 123, 255, 0.1)',
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            title: { display: true, text: '@(ViewBag.GroupBy == "year" ? "Năm" : ViewBag.GroupBy == "month" ? "Tháng" : "Ngày")' }
                        },
                        y: {
                            title: { display: true, text: 'Doanh thu (VNĐ)' },
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
}
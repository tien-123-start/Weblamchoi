
@model weblamchoi.Models.Order
@using System.Globalization
@{
    ViewData["Title"] = $"Chi tiết đơn hàng #{Model.OrderID}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Chi tiết đơn hàng #@Model.OrderID</h3>
<hr />

<div class="mb-4">
    <dl class="row">
        <dt class="col-sm-3">Khách hàng:</dt>
        <dd class="col-sm-9">@(Model.User?.FullName ?? "Không có thông tin")</dd>
        <dt class="col-sm-3">SĐT:</dt>
        <dd class="col-sm-9">@(Model.User?.Phone ?? "N/A")</dd>
        <dt class="col-sm-3">Địa chỉ:</dt>
        <dd class="col-sm-9">@(Model.User?.Address ?? "N/A")</dd>
        <dt class="col-sm-3">Ngày đặt:</dt>
        <dd class="col-sm-9">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>
        <dt class="col-sm-3">Trạng thái:</dt>
        <dd class="col-sm-9">@(Model.Status ?? "Chưa xác định")</dd>
        <dt class="col-sm-3">Giao hàng:</dt>
        <dd class="col-sm-9">@(Model.Shipping?.ShippingAddress ?? "N/A")</dd>
        <dt class="col-sm-3">Thanh toán:</dt>
        <dd class="col-sm-9">@(Model.Payment?.PaymentMethod ?? "N/A")</dd>
    </dl>

    <form asp-controller="Orders" asp-action="UpdateStatus" method="post" class="mt-3">
        <input type="hidden" name="orderId" value="@Model.OrderID" />
        <div class="mb-3">
            <label for="newStatus" class="form-label fw-bold">Cập nhật trạng thái:</label>
            <select name="newStatus" id="newStatus" class="form-select w-auto">
                @foreach (var status in new[] { "Chờ xử lý", "Đã xác nhận", "Đang chuyển hàng", "Đang giao hàng", "Thành công", "Đã hủy" })
                {
                    <option value="@status" selected="@(Model.Status == status)">@status</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-success btn-sm">Lưu trạng thái</button>
    </form>
</div>

<h5>Sản phẩm trong đơn hàng:</h5>
<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.OrderDetails == null || !Model.OrderDetails.Any())
        {
            <tr>
                <td colspan="4" class="text-center">Không có sản phẩm trong đơn hàng</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@(item.Product?.ProductName ?? "N/A")</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C", new CultureInfo("vi-VN"))</td>
                    <td>@((item.Quantity * item.UnitPrice).ToString("C", new CultureInfo("vi-VN")))</td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="text-end">
    <strong>Tổng cộng:</strong>
    <span class="text-danger fs-5 fw-bold">
        @(Model.TotalAmount?.ToString("C", new CultureInfo("vi-VN")) ?? "0 ₫")
    </span>
</div>

<a asp-controller="Orders" asp-action="Index" class="btn btn-secondary mt-3">Quay lại danh sách</a>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            @if (TempData["SuccessMessage"] != null)
            {
                    <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Thành công',
                        text: '@TempData["SuccessMessage"]',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#28a745'
                    });
                    </text>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                    <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi cập nhật trạng thái',
                        text: '@TempData["ErrorMessage"]',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#dc3545'
                    });
                    </text>
            }
        });
    </script>
}
